<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Add New Book</h3>
                </div>
                <div class="card-body">
                    {{#if messages.error}}
                        <div class="alert alert-danger">{{messages.error}}</div>
                    {{/if}}

                    <form action="/books/create" method="POST">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        
                        <div class="form-group">
                            <label for="Title">Title *</label>
                            <input type="text" class="form-control" id="Title" name="Title" required>
                        </div>

                        <div class="form-group">
                            <label for="AuthorID">Author</label>
                            <select class="form-control" id="AuthorID" name="AuthorID">
                                <option value="">-- Select Author --</option>
                                {{#each authors}}
                                    <option value="{{this.AuthorID}}">{{this.FirstName}} {{this.LastName}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Genres</label>
                                <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                    {{#each genres}}
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="GenreIDs" value="{{this.GenreID}}" id="genre{{this.GenreID}}">
                                            <label class="form-check-label" for="genre{{this.GenreID}}">
                                                {{this.GenreName}}
                                            </label>
                                        </div>
                                    {{/each}}
                                </div>
                                <small class="form-text text-muted">Select multiple genres if applicable</small>
                            </div>

                            <div class="form-group col-md-6">
                                <label for="PublishedYear">Published Year</label>
                                <input type="number" class="form-control" id="PublishedYear" name="PublishedYear" min="1000" max="2100">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="CopiesAvailable">Copies Available</label>
                            <input type="number" class="form-control" id="CopiesAvailable" name="CopiesAvailable" min="0" value="1">
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Create Book
                            </button>
                            <a href="/books" class="btn btn-secondary">
                                <i class="fa fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
