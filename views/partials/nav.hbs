<div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom">
    <a href="/" class="d-flex align-items-center link-body-emphasis text-decoration-none">
        <img class="me-2" src="/images/logo.svg" alt="" width="120" height="80" />
    </a>

    <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
        <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/"><i class="fa fa-home"></i> Home</a>
        
        {{#if isAuthenticated}}
            <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/books"><i class="fa fa-book"></i> Books</a>
            <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/genres"><i class="fa fa-tags"></i> Genres</a>
            <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/authors"><i class="fa fa-user"></i> Authors</a>
            <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/borrowers"><i class="fa fa-users"></i> Borrowers</a>
            <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/loans"><i class="fa fa-exchange"></i> Loans</a>
            <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/dashboard"><i class="fa fa-dashboard"></i> Dashboard</a>
        {{/if}}
        <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/about"><i class="fa fa-info-circle"></i> About</a>
    </nav>
    {{#if isAuthenticated}}
    <form action="/logout" method="POST" class="mt-3 mt-md-0">
        <input type="hidden" name="_csrf" value="{{csrfToken}}" >
        <button class="btn btn-outline-primary"><i class="fa fa-sign-out"></i> Logout</button> 
    </form>
    {{else}}
    <a class="btn btn-outline-primary mt-3 mt-md-0" href="/login"><i class="fa fa-sign-in"></i> Login</a>
    {{/if}}
</div>