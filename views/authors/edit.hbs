<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Author</h3>
                </div>
                <div class="card-body">
                    {{#if messages.error}}
                        <div class="alert alert-danger">{{messages.error}}</div>
                    {{/if}}

                    <form action="/authors/edit/{{author.AuthorID}}" method="POST">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        
                        <div class="form-group">
                            <label for="FirstName">First Name *</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" value="{{author.FirstName}}" required>
                        </div>

                        <div class="form-group">
                            <label for="LastName">Last Name *</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" value="{{author.LastName}}" required>
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Update Author
                            </button>
                            <a href="/authors" class="btn btn-secondary">
                                <i class="fa fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
