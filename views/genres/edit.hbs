<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fa fa-tags"></i> Edit Genre</h3>
                </div>
                <div class="card-body">
                    <form action="/genres/edit/{{genre.GenreID}}" method="POST">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        
                        <div class="mb-3">
                            <label for="GenreName" class="form-label">Genre Name</label>
                            <input type="text" class="form-control" id="GenreName" name="GenreName" 
                                   value="{{genre.GenreName}}" required>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/genres" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Update Genre
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
